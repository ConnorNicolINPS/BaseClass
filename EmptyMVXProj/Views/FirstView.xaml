<views:MvxWpfView 
             x:Class="EmptyMVXProj.Views.FirstView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:views="clr-namespace:MvvmCross.Wpf.Views;assembly=MvvmCross.Wpf"
             mc:Ignorable="d" 
             Background="Green">
    <Grid >
        <StackPanel Margin="10">
            <StackPanel Orientation="Horizontal">
                <Button x:Name="OpenConnectionButton" Content="openConnection" Width="120" HorizontalAlignment="Left" Height="30" Command="{Binding OpenConnectionCommand}"/>
                <Button x:Name="RegisterChannelButton" Content="RegisterToChannel" Width="120" HorizontalAlignment="Left" Height="30" Command="{Binding RegisterChannelCommand}"/>
                <TextBox x:Name="ChannelTextBox" Width="200" HorizontalAlignment="Right" Height="25" Text="{Binding ChannelToSendTo, Mode=TwoWay}"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,10">
                <TextBlock Text="Web socket connection status :" Margin="0,0,10,0"/>
                <TextBlock Text="{Binding ConnectionStatus, Mode=TwoWay}"/>
            </StackPanel>

            <TextBlock Background="Transparent" Text="Type Message to be sent" Margin="10,20,0,0"/>
            <TextBox x:Name="MessageTextBox" Height="60" Width="250" Background="AntiqueWhite" Margin="10,0,40,10" Text="{Binding MessageToSend, Mode=TwoWay}"/>
            <Button x:Name="SendMessageButton" Background="Aqua" Content="SendMessage" Height="30" Width="250" Margin="10,0,40,10" Command="{Binding SendMessageCommand}"/>

            <TextBlock Background="Transparent" Text="Received messages" Margin="10,20,0,0"/>
            <TextBox x:Name="ReceivedMessageTextBox" Height="60" Width="250" Background="AntiqueWhite" Margin="10,0,40,10" />

            <Border BorderThickness="0,1,0,0" BorderBrush="Red"/>
            <Button x:Name="GetSatffBttn" Content="Get Staff" Command="{Binding GetStaffCommand}" Margin="10,10,40,10"  Width="250" Height="30"  Background="Aqua" />
            <TextBlock x:Name="successTxtBox" Text="{Binding successMessage, Mode=TwoWay}" Margin="10,0,40,0"  Foreground="Red"/>

            <Border BorderThickness="0,1,0,0" BorderBrush="Red"/>
            <Button x:Name="sendLogBttn" Content="Get Staff" Command="{Binding SendLogCommand}" Margin="10,10,40,10"  Width="250" Height="30" Background="Aqua"/>
        </StackPanel>
    </Grid>
</views:MvxWpfView>
