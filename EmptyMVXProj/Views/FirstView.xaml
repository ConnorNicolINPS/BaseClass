<views:MvxWpfView 
             x:Class="EmptyMVXProj.Views.FirstView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:views="clr-namespace:MvvmCross.Wpf.Views;assembly=MvvmCross.Wpf"
             mc:Ignorable="d" >
    <Grid Width="700" Height="500" Background="Green">
        <StackPanel HorizontalAlignment="Center" Margin="15">
            <Button Width="200" Height="30" Background="Blue" Content="Get F5 Response" Margin="0,0,0,15"/>
            <TextBlock Width="400" Height="250" Background="Red" Foreground="Orange" FontSize="20" Text="{Binding ResponseText, FallbackValue=ResponseWillGoHere }"/>
        </StackPanel>
    </Grid>
</views:MvxWpfView>
