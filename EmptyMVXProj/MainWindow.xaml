<controls:MetroWindow x:Class="EmptyMVXProj.MainWindow"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
                      xmlns:VM="clr-namespace:EmptyMVXProjCore.ViewModels;assembly=EmptyMVXProjCore"
                      Title="MainWindow"
                      WindowState="Maximized"
                      IgnoreTaskbarOnMaximize="{Binding HideTaskBar}"
                      IsWindowDraggable="False"
                      ResizeMode="CanMinimize">
    <controls:MetroWindow.RightWindowCommands>
        <controls:WindowCommands>
            <Button Content="Show Taskbar" 
                    Command="{Binding HideButtonCommand}"/>
        </controls:WindowCommands>
    </controls:MetroWindow.RightWindowCommands>
    <Grid>


        <!-- your content -->

    </Grid>
</controls:MetroWindow>
